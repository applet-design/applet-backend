<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="icu.shishc.applet.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="icu.shishc.applet.entity.User">
        <id column="user_id" property="userId"/>
        <result column="union_id" property="unionId" />
        <result column="wx_name" property="wxName" />
        <result column="real_name" property="realName" />
        <result column="address" property="address" />
        <result column="phone" property="phone" />
        <result column="age" property="age" />
        <result column="gender" property="gender" />
    </resultMap>

<!--    <sql id="Base_Column">-->
<!--        user_id, union_id, wx_name, real_name, address, phone, age, gender-->
<!--    </sql>-->

    <select id="getUserByUnionId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select user_id, union_id from user where union_id = #{unionId}
    </select>

    <insert id="insertUser" parameterType="icu.shishc.applet.entity.User">
        insert into user(union_id) values (#{unionId})
    </insert>
</mapper>

